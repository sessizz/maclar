@model Maclar.Web.Models.MatchesIndexViewModel

@{
    ViewData["Title"] = "Maç Takvimi";

    DateTime? istanbulLastUpdatedAt = null;
    if (Model.LastUpdatedAt.HasValue)
    {
        TimeZoneInfo? istanbulTimeZone = null;
        try
        {
            istanbulTimeZone = TimeZoneInfo.FindSystemTimeZoneById("Europe/Istanbul");
        }
        catch (TimeZoneNotFoundException)
        {
            istanbulTimeZone = TimeZoneInfo.FindSystemTimeZoneById("Turkey Standard Time");
        }

        if (istanbulTimeZone is not null)
        {
            var utcDate = DateTime.SpecifyKind(Model.LastUpdatedAt.Value, DateTimeKind.Utc);
            istanbulLastUpdatedAt = TimeZoneInfo.ConvertTimeFromUtc(utcDate, istanbulTimeZone);
        }
    }
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2>Ä°stanbul Voleybol MaÃ§ Takvimi</h2>
        <p class="text-muted mb-1">
            Kaynak: <a href="https://istanbul.voleyboliltemsilciligi.com/MacTakvimi" target="_blank" rel="noopener">istanbul.voleyboliltemsilciligi.com/MacTakvimi</a>
        </p>
        @if (Model.LastUpdatedAt.HasValue)
        {
            <p class="text-muted mb-0">
                Son gÃ¼ncelleme (İstanbul): @(istanbulLastUpdatedAt?.ToString("dd.MM.yyyy HH:mm") ?? Model.LastUpdatedAt.Value.ToString("dd.MM.yyyy HH:mm"))
            </p>
        }
    </div>
    <div class="col-md-6 text-md-end mt-3 mt-md-0">
        <form asp-action="Index" asp-controller="Matches" method="get" class="d-inline-flex justify-content-end align-items-start gap-2">
            <div class="flex-grow-1">
                <input id="matchSearch"
                       name="search"
                       class="form-control form-control-lg"
                       placeholder="Arama"
                       title="TakÄ±m adÄ±, tarih, salon, kÃ¼me ve kategori alanlarÄ±nda aynÄ± anda arama yapabilirsiniz. Ã–rnek: 'fener mdk 22.12 beylikdÃ¼zÃ¼'"
                       value="@Model.Search" />
                <small class="text-muted">Birden fazla kelimeyle (takÄ±m, tarih, salon, kÃ¼me, kategori) aynÄ± anda arama yapabilirsiniz.</small>
            </div>
            <div class="mt-1">
                <button type="submit" formaction="@Url.Action("Refresh", "Matches")" formmethod="post" class="btn btn-sm btn-outline-secondary">
                    Verileri yenile
                </button>
            </div>
            @Html.AntiForgeryToken()
